                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Label Text="{Binding JobDetails.Shifttype}" Grid.Row="5" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobLocationShiftTimeText}" Grid.Row="5" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
