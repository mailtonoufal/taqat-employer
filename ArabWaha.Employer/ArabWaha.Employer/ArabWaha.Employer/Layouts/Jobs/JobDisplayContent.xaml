                            <BoxView BackgroundColor="Gray" HeightRequest="150" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions="Start" />


                            <Label Text="{Binding JobDetails.CompanyLocation.Address}" Grid.Row="3" Grid.Column="{Binding DataColumn}" 
                           Style="{StaticResource CellBodyTextMedGray}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" />
