            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobContactText}" AccordionIsExpanded="False" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
