                            <Label Text="{Binding JobDetails.Mobility}" Grid.Row="7" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobLocationMobilityText}" Grid.Row="7" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Label Text="{Binding LocationNotes}" Grid.Row="8" Grid.Column="2"  Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalOptions="FillAndExpand" 
                           HorizontalTextAlignment="Center" />

                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>
            
            <!-- Benefits and advantages -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobBenefitsText}" AccordionIsExpanded="False" AccordionImage = "{StaticResource DefaultJobIcon}" >
