<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:locals="clr-namespace:ArabWaha.Employer.Controls"
             xmlns:lEx="clr-namespace:ArabWaha.Employer.Helpers"
             xmlns:gb="clr-namespace:ArabWaha.Employer"
             x:Class="ArabWaha.Employer.Layouts.Jobs.JobDisplayContent">
  <ContentView.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
            <!-- Job summary -->
            <StackLayout Margin="5,5,5,5" BackgroundColor="{StaticResource StackBorderColorLight}">
                <Grid Margin="2,2,2,2" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                        <RowDefinition>
                            <RowDefinition.Height>
                                <OnIdiom x:TypeArguments="GridLength" Tablet="20" Phone="15" />
                            </RowDefinition.Height>
                        </RowDefinition>
                        <RowDefinition>
                            <RowDefinition.Height>
                                <OnIdiom x:TypeArguments="GridLength" Tablet="20" Phone="15" />
                            </RowDefinition.Height>
                        </RowDefinition>
                        <RowDefinition Height="*" />
                        <RowDefinition>
                            <RowDefinition.Height>
                                <OnIdiom x:TypeArguments="GridLength" Tablet="20" Phone="15" />
                            </RowDefinition.Height>
                        </RowDefinition>
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />

                    <Label Text="{Binding JobDetails.JobPostTitle}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalTextAlignment="End" Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="End" />

                    <Label Text="{Binding JobDetails.GetPostedInfo}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource CellBodyTextSmallGray}" HorizontalOptions="End" HorizontalTextAlignment="End" />
                    <Label Text="{Binding JobDetails.JobStatusText}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource CellBodyTextSmallGray}" HorizontalOptions="End" HorizontalTextAlignment="End" />

                    <Label Text="{lEx:Translate LabelJobTrainingLocationText}" Grid.Row="4" Grid.Column="0" Style="{StaticResource InfoBodyTextSmallBlue}" 
                           HorizontalOptions="End" HorizontalTextAlignment="End" />
                    <Label Text="{Binding JobDetails.CompanyName}" Grid.Row="4" Grid.Column="1" Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalOptions="End" HorizontalTextAlignment="End" />

                    <Label Text="{Binding JobDetails.CompanyLocation.LocationId}" Grid.Row="5" Grid.Column="0" Style="{StaticResource CellBodyTextSmallGray}" HorizontalOptions="End" HorizontalTextAlignment="End" />
                    <Label Text="{Binding JobDetails.CompanyIndustry}" Grid.Row="5" Grid.Column="1" Style="{StaticResource CellBodyTextSmallGray}" HorizontalOptions="End" HorizontalTextAlignment="End" />

                    <Image Source="{Binding JobDetails.CompanyLogo}" Grid.Row="4" Grid.RowSpan="3" Grid.Column="2" HeightRequest="32" WidthRequest="32" Aspect="AspectFit" />
                </Grid>
            </StackLayout>
            
            <!-- description -->
            <locals:XpertAccordion HeaderText="{lEx:Translate Description}" AccordionIsExpanded="False" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10" />
                                <!--<RowDefinition Height="*" />-->
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="3" VerticalOptions="FillAndExpand" />-->

                            <!--<Label Text="{lEx:Translate Description}" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="{Binding AlignLabelText}" 
                               Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="FillAndExpand" />-->

                            <Label Text="{Binding JobDetails.JobDescription}" Grid.Row="1" Grid.Column="1"  
                               Style="{StaticResource CellBodyTextMedGray}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>
            
            <!-- General Information -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobGeneralInformation}" AccordionIsExpanded="False" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                        <RowDefinition Height="4" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />

                    </Grid.ColumnDefinitions>
                    <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="14" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />
                    <Label Text="{lEx:Translate LabelJobGeneralInformation}" Grid.Row="1" Grid.Column="{Binding LabelColumn}" Grid.ColumnSpan="2" 
                           HorizontalTextAlignment="{Binding AlignLabelText}" Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="FillAndExpand" />-->

                    <Label Text="{Binding JobDetails.Status}" Grid.Row="2" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobApplicationStatus}" Grid.Row="2" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                    <Label Text="{Binding JobDetails.JobPostId}" Grid.Row="3" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobJobPostID}" Grid.Row="3" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                    <Label Text="{Binding JobDetails.JobType, Converter={StaticResource JobTypeConverter}}" Grid.Row="4" Grid.Column="{Binding DataColumn}" 
                           Style="{StaticResource CellBodyTextMedGray}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobJobType}" Grid.Row="4" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                    <Label Text="{Binding JobDetails.OpenPositions}" Grid.Row="5" Grid.Column="{Binding DataColumn}"  Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobOpenPositions}" Grid.Row="5" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                    <Label Text="{Binding JobDetails.FilledPosition}" Grid.Row="6" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobFilledPositions}" Grid.Row="6" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                    <Label Text="{Binding JobDetails.SalaryTo, StringFormat='{0} SAR'}" Grid.Row="7" Grid.Column="{Binding DataColumn}" 
                           Style="{StaticResource CellBodyTextMedGray}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobSalary}" Grid.Row="7" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                    <Label Text="{Binding JobDetails.CompanyIndustry}" Grid.Row="8" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobSector}" Grid.Row="8" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                    <Label Text="{Binding JobDetails.Experience}" Grid.Row="9" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobMinimumExp}" Grid.Row="9" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                    <Label Text="{Binding JobDetails.PublicationDate}" Grid.Row="10" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobAppliedDate}" Grid.Row="10" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                    <Label Text="{Binding JobDetails.StartDate}" Grid.Row="11" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                    <Label Text="{lEx:Translate LabelJobDesiredStartDate}" Grid.Row="11" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />



                </Grid>
            </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>
            
            
            <!-- Skills -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobSkills}" AccordionIsExpanded="False" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />

                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="9" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />
                            <Label Text="{lEx:Translate LabelJobSkills}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalTextAlignment="{Binding AlignLabelText}" 
                           Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="FillAndExpand" />-->

                            <Label Text="{Binding JobDetails.JobPostTitle}" Grid.Row="2" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobTitle}" Grid.Row="2" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Label Text="{Binding JobDetails.CompanyName}" Grid.Row="3" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobCompany}" Grid.Row="3" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Label Text="{Binding JobDetails.CompanyIndustry}" Grid.Row="4" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobSector}" Grid.Row="4" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Label Text="{Binding JobDetails.OpenPositions}" Grid.Row="5" Grid.Column="{Binding DataColumn}"  Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobYears}" Grid.Row="5" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Label Text="{Binding JobDetails.MonthlySalary}" Grid.Row="6" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobMonthlySalary}" Grid.Row="6" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Label Text="{Binding JobDetails.RolesResponsibilities}" Grid.Row="7" Grid.Column="{Binding DataColumn}" Style="{StaticResource CellBodyTextMedGray}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobRolesResponsib}" Grid.Row="7" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>
            
            
            <!-- Language listview for list of languages -->
            <locals:XpertAccordion HeaderText="{lEx:Translate TextLanguage}" AccordionIsExpanded="False" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="3"  />
                    <Label Text="{lEx:Translate TextLanguage}" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="{Binding AlignLabelText}" 
                           Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="FillAndExpand" />-->

                            <StackLayout  Grid.Row="2" Grid.Column="1"  VerticalOptions="Start" >
                                <ListView  ItemsSource="{Binding JobLanguages}"  HeightRequest="250" SeparatorVisibility="None"
                              >
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Grid HeightRequest="100" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1" />
                                                        <ColumnDefinition Width="5*" />
                                                        <ColumnDefinition Width="5*" />
                                                        <ColumnDefinition Width="1" />
                                                    </Grid.ColumnDefinitions>
                                                    <locals:HighProgressBar Rotation="180" BarHeight="10" IsHeader="False" BarColor="Orange" 
                                                 Progress="{Binding ProficiencyValue}" Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" 
                                                 HorizontalOptions="FillAndExpand" />
                                                    <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}" 
                                                   HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" Style="{StaticResource InfoHeaderTextSmallBlue}" />

                                                    <!-- second grid -->
                                                    <Grid HeightRequest="50" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" Grid.Row="1" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="5*" />
                                                            <ColumnDefinition Width="5*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Text="{lEx:Translate LabelJobExpert}"  Grid.Column="0" HorizontalTextAlignment="Start" 
                                                       Style="{StaticResource CellBodyTextMedGray}" />
                                                        <Label Text="{lEx:Translate LabelJobBeginner}"  Grid.Column="1" HorizontalTextAlignment="End" 
                                                       Style="{StaticResource CellBodyTextMedGray}" />

                                                    </Grid>

                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>

                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>
            
            <!-- Licences -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobLicences}" AccordionIsExpanded="False" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />

                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="6" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />
                    <Label Text="{lEx:Translate LabelJobLicences}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  HorizontalTextAlignment="{Binding AlignLabelText}" 
                           Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="FillAndExpand" />-->

                            <Label Text="{Binding JobDetails.RequiresDrivingLicence}" Grid.Row="2" Grid.Column="{Binding DataColumn}" 
                           HorizontalTextAlignment="{Binding AlignText}" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
                            <Label Text="{lEx:Translate LabelJobDrivingLicence}" Grid.Row="2" Grid.Column="{Binding LabelColumn}" VerticalOptions="Start" HorizontalOptions="FillAndExpand" 
                           HorizontalTextAlignment="{Binding AlignLabelText}" Style="{StaticResource InfoHeaderTextSmallBlue}" />
                            <Label Text="{Binding JobDetails.DrivingLicenceType}" Grid.Row="3" Grid.Column="{Binding DataColumn}" VerticalOptions="Start" 
                           HorizontalTextAlignment="{Binding AlignText}" HorizontalOptions="FillAndExpand"/>
                            <Label Text="{lEx:Translate LabelJobLicenceType}" Grid.Row="3" Grid.Column="{Binding LabelColumn}" HorizontalOptions="FillAndExpand" 
                           HorizontalTextAlignment="{Binding AlignLabelText}" VerticalOptions="Start" Style="{StaticResource InfoHeaderTextSmallBlue}" />


                            <StackLayout  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical" VerticalOptions="Start" >
                                <ListView  ItemsSource="{Binding JobLicenses}" HasUnevenRows="True" SeparatorVisibility="None" HeightRequest="150"  >
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <StackLayout VerticalOptions="Start">
                                                    <Grid VerticalOptions="Fill">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1" />
                                                            <ColumnDefinition Width="0.5*" />
                                                            <ColumnDefinition Width="0.5*" />
                                                            <ColumnDefinition Width="1" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Text="{Binding Value}" Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" 
                                                       HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignText}"
                                                       HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center"  />
                                                        <Label Text="{lEx:Translate LabelJobLicenceName}" Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}"  
                                                       HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" VerticalTextAlignment="Center"  Style="{StaticResource InfoHeaderTextSmallBlue}" />
                                                        <Label Text="{Binding ExpiryValue}" Grid.Row="1" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" 
                                                       HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignText}" />
                                                        <Label Text="{lEx:Translate LabelJobExpiry}" Grid.Row="1" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}"  
                                                       HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" 
                                                       Style="{StaticResource InfoHeaderTextSmallBlue}" />
                                                    </Grid>
                                                </StackLayout>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>



                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>
            
            <!-- Training -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobTrainingText}" AccordionIsExpanded="False" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >

                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="3" VerticalOptions="FillAndExpand" />
                    <Label Text="{lEx:Translate LabelJobTrainingText}" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="{Binding AlignLabelText}" 
                           Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="FillAndExpand" />-->

                            <StackLayout  Grid.Row="2" Grid.Column="1" Orientation="Vertical" >
                                <ListView ItemsSource="{Binding JobTraining}" HeightRequest="200"  HasUnevenRows="True" SeparatorVisibility="None" >
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <StackLayout>
                                                    <Grid VerticalOptions="Start">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1" />
                                                            <ColumnDefinition Width="0.5*" />
                                                            <ColumnDefinition Width="0.5*" />
                                                            <ColumnDefinition Width="1" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" HorizontalOptions="FillAndExpand"
                                                       HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignText}"/>
                                                        <Label Text="{lEx:Translate LabelJobTrainingNameText}" Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}" 
                                                       HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" 
                                                       Style="{StaticResource InfoHeaderTextSmallBlue}" />

                                                        <Label Text="{Binding InstituteName}" Grid.Row="1" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" 
                                                       HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignText}"/>
                                                        <Label Text="{lEx:Translate LabelJobTrainingInstituteText}" Grid.Row="1" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}" 
                                                       HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" 
                                                       Style="{StaticResource InfoHeaderTextSmallBlue}" />

                                                        <Label Text="{lEx:Translate LabelJobTrainingLocationText}" Grid.Row="2" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}" 
                                                       HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" 
                                                       Style="{StaticResource InfoHeaderTextSmallBlue}" />
                                                        <Label Text="{Binding Location}" Grid.Row="2" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" 
                                                       HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignText}" />

                                                        <Label Text="{Binding Validity}" Grid.Row="3" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" 
                                                       HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignText}" />
                                                        <Label Text="{lEx:Translate LabelJobTrainingValidityText}" Grid.Row="3" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}" 
                                                       HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" 
                                                       Style="{StaticResource InfoHeaderTextSmallBlue}" />
                                                    </Grid>
                                                </StackLayout>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>

            <!-- Location -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobTrainingLocationText}" AccordionIsExpanded="False" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />

                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="9" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />
                    <Label Text="{lEx:Translate LabelJobTrainingLocationText}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
