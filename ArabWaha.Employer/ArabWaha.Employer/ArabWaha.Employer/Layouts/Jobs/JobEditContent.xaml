<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:locals="clr-namespace:ArabWaha.Employer.Controls"
             xmlns:bh="clr-namespace:Pillar;assembly=Pillar"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:lEx="clr-namespace:ArabWaha.Employer.Helpers"
             xmlns:gb="clr-namespace:ArabWaha.Employer"
             x:Class="ArabWaha.Employer.Layouts.Jobs.JobEditContent"
             x:Name="Details">
  <ContentView.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
            <!-- Job summary -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobJobTitle}" AccordionIsExpanded="True" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="9" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />

                    <Label Text="{lEx:Translate LabelJobJobTitle}" Grid.Row="1" Grid.Column="{Binding LabelColumn}" Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />-->
                            <Entry  Text="{Binding JobDetails.JobPostTitle, Mode=TwoWay}" Grid.Row="1" Grid.Column="{Binding DataColumn}" HorizontalTextAlignment="{Binding AlignText}" 
                            Style="{StaticResource BlackTextMediumEntry}" HorizontalOptions="FillAndExpand" />

                            <Label Text="{lEx:Translate LabelJobPosted}" Grid.Row="2" Grid.Column="{Binding LabelColumn}" Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />
                            <Entry Text="{Binding JobDetails.Posted, Mode=TwoWay}" Grid.Row="2" Grid.Column="{Binding DataColumn}"  
                           Style="{StaticResource BlackTextMediumEntry}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />

                            <Label Text="{lEx:Translate LabelJobStatus}" Grid.Row="3" Grid.Column="{Binding LabelColumn}" Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />
                            <Entry Text="{Binding JobDetails.Status, Mode=TwoWay}" Grid.Row="3" Grid.Column="{Binding DataColumn}"  
                           Style="{StaticResource BlackTextMediumEntry}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />

                            <Label Text="{lEx:Translate SearchLocationText}" Grid.Row="4" Grid.Column="{Binding LabelColumn}" Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />
                            <Entry Text="{Binding JobDetails.CompanyLocation.LocationId, Mode=TwoWay}" Grid.Row="4" Grid.Column="{Binding DataColumn}" 
                           Style="{StaticResource BlackTextMediumEntry}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />

                            <Label Text="{lEx:Translate LabelJobCompanyName}" Grid.Row="5" Grid.Column="{Binding LabelColumn}" Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />
                            <Entry Text="{Binding JobDetails.CompanyName, Mode=TwoWay}" Grid.Row="5" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />


                            <Label Text="{lEx:Translate LabelJobCompanyIndustry}" Grid.Row="6" Grid.Column="{Binding LabelColumn}" Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />
                            <Entry Text="{Binding JobDetails.CompanyIndustry, Mode=TwoWay}" Grid.Row="6" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />

                            <Label Text="{lEx:Translate LabelJobCompanyLogo}" Grid.Row="7" Grid.Column="{Binding LabelColumn}" Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />
                            <Entry Text="{Binding JobDetails.CompanyLogo, Mode=TwoWay}" Grid.Row="7" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>


            <!-- description -->
            <locals:XpertAccordion HeaderText="{lEx:Translate Description}" AccordionIsExpanded="True" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="120" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />

                    <Label Text="{lEx:Translate Description}" Grid.Row="1" Grid.Column="{Binding LabelColumn}" HorizontalTextAlignment="{Binding AlignLabelText}" 
                           Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalOptions="FillAndExpand" />-->

                            <Editor Text="{Binding JobDetails.JobDescription, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"   
                               HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />

                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>
            

            <!-- General Information -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobGeneralInformation}" AccordionIsExpanded="True" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />

                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="14" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />
                    <Label Text="{lEx:Translate LabelJobGeneralInformation}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalTextAlignment="{Binding AlignLabelText}" 
                           Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="FillAndExpand" />-->

                            <Entry Text="{Binding JobDetails.Status, Mode=TwoWay}" Grid.Row="2" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobApplicationStatus}" Grid.Row="2" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.JobPostId, Mode=TwoWay}" Grid.Row="3" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobJobPostID}" Grid.Row="3" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <!--<Entry Text="{Binding JobDetails.JobType, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" Style="{StaticResource BlackTextMediumEntry}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" />-->
                            <Picker ItemsSource="{Binding JobTypeList}"  ItemDisplayBinding="{Binding Text}" SelectedIndex="{Binding JobTypeSelected}"  Grid.Row="4" Grid.Column="{Binding DataColumn}"  ></Picker>
                            <Label Text="{lEx:Translate LabelJobJobType}" Grid.Row="4" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.OpenPositions, Mode=TwoWay}" Grid.Row="5" Grid.Column="{Binding DataColumn}"  Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobOpenPositions}" Grid.Row="5" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.FilledPosition, Mode=TwoWay}" Grid.Row="6" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobFilledPositions}" Grid.Row="6" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.SalaryTo, Mode=TwoWay}" Grid.Row="7" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobSalary}" Grid.Row="7" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.CompanyIndustry, Mode=TwoWay}" Grid.Row="8" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobSector}" Grid.Row="8" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.Experience, Mode=TwoWay}" Grid.Row="9" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobMinimumExp}" Grid.Row="9" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.PublicationDate, Mode=TwoWay}" Grid.Row="10" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobAppliedDate}" Grid.Row="10" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.StartDate, Mode=TwoWay}" Grid.Row="11" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobDesiredStartDate}" Grid.Row="11" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />



                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>


            <!-- Skills -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobSkills}" AccordionIsExpanded="True" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="9" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />
                    <Label Text="{lEx:Translate LabelJobSkills}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalTextAlignment="{Binding AlignLabelText}" 
                           Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="FillAndExpand" />-->

                            <Entry Text="{Binding JobDetails.JobPostTitle, Mode=TwoWay}" Grid.Row="2" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobTitle}" Grid.Row="2" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.CompanyName, Mode=TwoWay}" Grid.Row="3" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobCompany}" Grid.Row="3" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.CompanyIndustry, Mode=TwoWay}" Grid.Row="4" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobSector}" Grid.Row="4" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.OpenPositions, Mode=TwoWay}" Grid.Row="5" Grid.Column="{Binding DataColumn}"  Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobYears}" Grid.Row="5" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.MonthlySalary, Mode=TwoWay}" Grid.Row="6" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobMonthlySalary}" Grid.Row="6" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                            <Entry Text="{Binding JobDetails.RolesResponsibilities, Mode=TwoWay}" Grid.Row="7" Grid.Column="{Binding DataColumn}" Style="{StaticResource BlackTextMediumEntry}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" />
                            <Label Text="{lEx:Translate LabelJobRolesResponsib}" Grid.Row="7" Grid.Column="{Binding LabelColumn}"  Style="{StaticResource InfoHeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" />

                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>

            <!-- Language listview for list of languages -->
            <locals:XpertAccordion HeaderText="{lEx:Translate TextLanguage}" AccordionIsExpanded="True" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >

                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="3"  />
                    <Label Text="{lEx:Translate TextLanguage}" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="{Binding AlignLabelText}" Style="{StaticResource InfoBodyTextBlue}" 
                           HorizontalOptions="FillAndExpand" />-->

                            <StackLayout  Grid.Row="2" Grid.Column="1"  VerticalOptions="Start" >
                                <ListView  ItemsSource="{Binding JobLanguages}"  HeightRequest="250" SeparatorVisibility="None"
                              SelectedItem="{Binding SelectedEditItem, Mode=TwoWay}"     >
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell  x:Name="myCell" >
                                                <Grid HeightRequest="100" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1" />
                                                        <ColumnDefinition Width="5*" />
                                                        <ColumnDefinition Width="5*" />
                                                        <ColumnDefinition Width="1" />
                                                    </Grid.ColumnDefinitions>
                                                    <locals:HighProgressBar Rotation="180" BarHeight="10" IsHeader="False" BarColor="Orange" Progress="{Binding ProficiencyValue}" 
                                                                    Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" HorizontalOptions="FillAndExpand" />

                                                    <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}" 
                                                   HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" Style="{StaticResource InfoHeaderTextSmallBlue}" />

                                                    <!-- second grid -->
                                                    <Grid HeightRequest="50" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" Grid.Row="1" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="5*" />
                                                            <ColumnDefinition Width="5*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Text="{lEx:Translate LabelJobExpert}"  Grid.Column="0" HorizontalTextAlignment="Start" Style="{StaticResource CellBodyTextMedGray}" />
                                                        <Label Text="{lEx:Translate LabelJobBeginner}"  Grid.Column="1" HorizontalTextAlignment="End" Style="{StaticResource CellBodyTextMedGray}" />

                                                    </Grid>


                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                            </StackLayout>

                        </Grid>
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="6"  />

                            <Label Text="1"  Grid.Row="0" Grid.Column="2" HorizontalTextAlignment="Start" VerticalTextAlignment="End" Style="{StaticResource CellBodyTextMedGray}" />
                            <Label Text="10"  Grid.Row="0" Grid.Column="0" HorizontalTextAlignment="End"  VerticalTextAlignment="End" Style="{StaticResource CellBodyTextMedGray}" />

                            <Slider Value="{Binding LanguageSliderValue}" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="100"  Rotation="180" VerticalOptions="End" HorizontalOptions="FillAndExpand" />
                            <Entry Text="{Binding LanguageEdit}" Style="{StaticResource BlackTextMediumEntry}"   Grid.Row="0" Grid.Column="3" 
                           Placeholder="{lEx:Translate LabelJobLanguagehere}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" VerticalOptions="End"  />
                            <Button  Grid.Row="0" Grid.Column="4" Text="+" Command="{Binding AddLanguageCommand}" FontAttributes="Bold" HorizontalOptions="FillAndExpand"/>
                            <Button  Grid.Row="0" Grid.Column="5" Text="-" Command="{Binding DeleteLanguageCommand}" FontAttributes="Bold" HorizontalOptions="FillAndExpand"/>


                        </Grid>
                    </StackLayout>
                </locals:XpertAccordion.AccordionContents>
            </locals:XpertAccordion>
            
            <!-- Licences -->
            <locals:XpertAccordion HeaderText="{lEx:Translate LabelJobLicences}" AccordionIsExpanded="True" AccordionImage = "{StaticResource DefaultJobIcon}" >
                <locals:XpertAccordion.AccordionContents>
                    <StackLayout BackgroundColor="White">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />

                            </Grid.ColumnDefinitions>
                            <!--<BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="6" Grid.Column="0" Grid.ColumnSpan="4" VerticalOptions="FillAndExpand" />
                    <Label Text="{lEx:Translate LabelJobLicences}" Grid.Row="1" Grid.Column="{Binding LabelColumn}" 
                           HorizontalTextAlignment="{Binding AlignLabelText}" Style="{StaticResource InfoBodyTextBlue}" HorizontalOptions="FillAndExpand" />-->

                            <!--<Label Text="{Binding JobDetails.RequiresDrivingLicence}" Grid.Row="2" Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />-->
                            <Entry Text="{Binding JobDetails.RequiresDrivingLicence}" Style="{StaticResource BlackTextMediumEntry}"   Grid.Row="2" Grid.Column="{Binding DataColumn}" 
                           Placeholder="{lEx:Translate LabelJobRequiresDrivingLicence}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" VerticalOptions="End"  />


                            <Label Text="{lEx:Translate LabelJobDrivingLicence}" Grid.Row="2" Grid.Column="{Binding LabelColumn}" VerticalOptions="Start" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignLabelText}" Style="{StaticResource InfoHeaderTextSmallBlue}" />
                            <!--<Label Text="{Binding JobDetails.DrivingLicenceType}" Grid.Row="3" Grid.Column="1" VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>-->

                            <Entry Text="{Binding JobDetails.DrivingLicenceType}" Style="{StaticResource BlackTextMediumEntry}"   Grid.Row="3" Grid.Column="{Binding DataColumn}" Placeholder="" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{Binding AlignText}" VerticalOptions="End"  />

                            <Label Text="{lEx:Translate LabelJobLicenceType}" Grid.Row="3" Grid.Column="{Binding LabelColumn}" HorizontalOptions="FillAndExpand" 
                           HorizontalTextAlignment="{Binding AlignLabelText}" VerticalOptions="Start" Style="{StaticResource InfoHeaderTextSmallBlue}" />


                            <StackLayout  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical" VerticalOptions="Start" >
                                <ScrollView>
                                    <ListView  ItemsSource="{Binding JobLicenses}" HasUnevenRows="True" SeparatorVisibility="None" HeightRequest="150" 
                                     SelectedItem="{Binding SelectedLicenceEditItem, Mode=TwoWay}"    >
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <StackLayout VerticalOptions="Start">
                                                        <Grid VerticalOptions="Fill">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*" />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="1" />
                                                                <ColumnDefinition Width="0.5*" />
                                                                <ColumnDefinition Width="0.5*" />
                                                                <ColumnDefinition Width="1" />
                                                            </Grid.ColumnDefinitions>
                                                            <Label Text="{Binding Value}" Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" 
                                                           HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignText}" />
                                                            <Label Text="{lEx:Translate LabelJobLicenceName}" Grid.Row="0" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}" 
                                                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" VerticalTextAlignment="Center"  Style="{StaticResource InfoHeaderTextSmallBlue}" />
                                                            <Label Text="{Binding ExpiryValue}" Grid.Row="1" Grid.Column="{x:Static gb:GlobalSetting.DataColumn}" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignText}"
                                                           HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center" />
                                                            <Label Text="{lEx:Translate LabelJobExpiry}" Grid.Row="1" Grid.Column="{x:Static gb:GlobalSetting.LabelColumn}" 
                                                           HorizontalOptions="FillAndExpand" 
                                                       VerticalTextAlignment="Center" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" Style="{StaticResource InfoHeaderTextSmallBlue}" />
                                                        </Grid>
                                                    </StackLayout>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </ScrollView>
                            </StackLayout>

                        </Grid>
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="4"  />

                            <Label Text="{lEx:Translate LabelJobLicenceName}"  Grid.Row="0" Grid.Column="{Binding LabelColumn}" HorizontalTextAlignment="{Binding AlignLabelText}" 
                           VerticalTextAlignment="Center" Style="{StaticResource InfoHeaderTextSmallBlue}" />
