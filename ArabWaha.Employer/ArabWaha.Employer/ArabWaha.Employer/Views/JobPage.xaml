<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:gb="clr-namespace:ArabWaha.Employer.StaticData"                                    
             xmlns:lEx="clr-namespace:ArabWaha.Employer.Helpers"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ArabWaha.Employer.Views.JobPage"
             Title="{Binding JobDetails.JobPostTitle}"
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding WatchText}" Command="{Binding WatchCommand}"  />
    </ContentPage.ToolbarItems>
    
    <ScrollView>
        <StackLayout Style="{StaticResource MainTopLevelStackLayout}" BackgroundColor="{StaticResource GreyPageColor}">
            <Grid Padding="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="{StaticResource GreyPageColor}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ContentView  Grid.Row="0" Content="{Binding CurrentView}"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
                <StackLayout Grid.Row="1" Style="{StaticResource ContentStackLayout}" BackgroundColor="{StaticResource GreyPageColor}">
 
                        <Button IsVisible="{Binding IsViewMode}"  Margin="0" Text="{lEx:Translate ButtonViewMatchingCandidates}" Command="{Binding ViewCandidatesCommand}" Style="{StaticResource GreenButtonFlat}" />
                        <Button IsVisible="{Binding IsViewMode}"  Margin="0" Text="{lEx:Translate ButtonEditJobPost}" Command="{Binding EditJobCommand}" Style="{StaticResource BlueButtonFlat}" />
                        <Button IsVisible="{Binding IsViewMode}"  Margin="0" Text="{lEx:Translate ButtonDeleteJobPost}" Command="{Binding DeleteJobCommand}" Style="{StaticResource RedButtonFlat}" />

                        <Button  IsVisible="{Binding IsEditMode}"  Margin="0"  Text="{lEx:Translate ButtonSaveEdits}" Command="{Binding SaveChangesJobCommand}" Style="{StaticResource GreenButtonFlat}" />
                        <Button  IsVisible="{Binding IsEditMode}"  Margin="0" Text="{lEx:Translate ButtonDiscardChanges}" Command="{Binding DiscardChangesJobCommand}" Style="{StaticResource RedButtonFlat}" />

                        <Button  IsVisible="{Binding IsNewMode}"  Margin="0"  Text="{lEx:Translate ButtonSaveEdits}" Command="{Binding SaveChangesJobCommand}" Style="{StaticResource GreenButtonFlat}" />


                </StackLayout>
            </Grid>
        </StackLayout>
    </ScrollView>

</ContentPage>