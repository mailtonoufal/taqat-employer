<?xml version="1.0" encoding="utf-8" ?>
<local:AWMenuContainerPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:lEx="clr-namespace:ArabWaha.Employer.Helpers"                                        
             xmlns:local="clr-namespace:ArabWaha.Employer.BaseCalsses;assembly=ArabWaha.Employer" 
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ArabWaha.Employer.Views.CompanyDetailsPage"
             Title="{Binding CompanyInfo.CompanyName}"
             >
    <StackLayout Padding="10">
    <StackLayout VerticalOptions="Start" HorizontalOptions="Fill">
            <Image Source="{Binding CompanyInfo.CompanyLogo}" HeightRequest="60" BackgroundColor="{StaticResource BluePageColor}"></Image>
            <Label Text="{Binding CompanyInfo.CompanyName}" Style="{StaticResource HeaderTextMediumBlue}" HorizontalOptions="End"></Label>
            <Label Text="{Binding CompanyInfo.CompanyURL}" Style="{StaticResource HeaderTextSmallBlue}" HorizontalOptions="End"></Label>
    </StackLayout>
    <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <StackLayout>
                <StackLayout>
                    <Label Text="{lEx:Translate CompanyDescriptionLabel}" Style="{StaticResource HeaderTextSmallBlue}" HorizontalOptions="End"> </Label>
                    <Label Text="{Binding CompanyInfo.CompanyDescription}" Style="{StaticResource InfoBodyTextSmallBlue}" ></Label>
                </StackLayout>             
                <StackLayout>
                    <Label Text="{lEx:Translate CompanyInformationLabel}" Style="{StaticResource HeaderTextSmallBlue}" HorizontalOptions="End"></Label>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate IndustryLabel}"  Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="1" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate CompanySizeLabel}"  Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="2" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate PreferredLanguageLabel}" Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="3" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate ProfileIDLabel}" Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalTextAlignment="End"></Label>

                        <Label Grid.Row="0" Grid.Column="{Binding DataColumn}" Text="{Binding CompanyInfo.Industry}"  Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="1" Grid.Column="{Binding DataColumn}" Text="{Binding CompanyInfo.CompanySize}"  Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="2" Grid.Column="{Binding DataColumn}" Text="{Binding CompanyInfo.PreferredLanguage}" Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="3" Grid.Column="{Binding DataColumn}" Text="{Binding CompanyInfo.ProfileID}" Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                    </Grid>
                </StackLayout>
                <StackLayout>
                    <Label Text="{lEx:Translate ContactDetailsLabel}" Style="{StaticResource HeaderTextSmallBlue}" HorizontalOptions="End"></Label>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate NameLabel}"  Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="1" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate PositionLabel}"  Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="2" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate MobilePhoneLabel}" Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="3" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate TelephoneNumberLabel}" Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="4" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate EmailAddressLabel}" Style="{StaticResource InfoHeaderTextSmallBlue}" HorizontalTextAlignment="End"></Label>

                        <Label Grid.Row="0" Grid.Column="{Binding DataColumn}" Text="{Binding CompanyInfo.ContactName}"  Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="1" Grid.Column="{Binding DataColumn}" Text="{Binding CompanyInfo.ContactPosition}"  Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                        <Label Grid.Row="2" Grid.Column="{Binding DataColumn}" Text="{Binding CompanyInfo.ContactMobile}" Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalTextAlignment="End">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CompanyInfo.CallCommand}" CommandParameter="{Binding CompanyInfo.ContactMobile}" NumberOfTapsRequired="1" />
                            </Label.GestureRecognizers>                            
                        </Label>
                        <Label Grid.Row="3" Grid.Column="{Binding DataColumn}" Text="{Binding CompanyInfo.ContactPhone}" Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalTextAlignment="End">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CompanyInfo.CallCommand}" CommandParameter="{Binding CompanyInfo.ContactPhone}" NumberOfTapsRequired="1" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Grid.Row="4" Grid.Column="{Binding DataColumn}" Text="{Binding CompanyInfo.ContactEmail}" Style="{StaticResource InfoBodyTextSmallBlue}" HorizontalTextAlignment="End"></Label>
                    </Grid>
                </StackLayout>
                <StackLayout>
                    <Label Text="{lEx:Translate LocationLabel}" Style="{StaticResource HeaderTextSmallBlue}" HorizontalOptions="End"></Label>
                    <Grid>
                     <BoxView Grid.Row="0" HeightRequest="100" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Silver"></BoxView>
                     <Label Grid.Row="0" Text="MAP GOES HERE" HorizontalOptions="Center" VerticalOptions="Center"></Label>  
                    </Grid>
                </StackLayout>
                <Button Text="{lEx:Translate ManageCompanyUsersButton}" Style="{StaticResource GreenButton}" HorizontalOptions="FillAndExpand" Command="{Binding ManageCommand}"></Button>
            </StackLayout>

        </ScrollView>
    </StackLayout>

</local:AWMenuContainerPage>