<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:lEx="clr-namespace:ArabWaha.Employer.Helpers"  
    xmlns:controls="clr-namespace:ArabWaha.Employer;assembly=ArabWaha.Employer" 
        xmlns:gb="clr-namespace:ArabWaha.Employer.StaticData"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ArabWaha.Employer.Views.CompanyAddUserPage"
             Title="{lEx:Translate  LabelAddUserTitleText}">
    <StackLayout Style="{StaticResource MainTopLevelStackLayout}" BackgroundColor="{StaticResource GreyPageColor}">
        <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <StackLayout Style="{StaticResource ContentStackLayout}" BackgroundColor="{StaticResource GreyPageColor}">
            <StackLayout BackgroundColor="White">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="5"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{lEx:Translate UserDetailsLabel}" Style="{StaticResource HeaderTextSmallBlue}" 
                           HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start"/>


                    <Label Margin="0,5,0,5" Grid.Row="2" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate UserNINLabel}"  VerticalOptions="End"
                           Style="{StaticResource FormHeaderLabelMediumBlue}"  HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" />
                    <Label Margin="0,5,0,5" Grid.Row="3" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate NLGUsernameLabel}"  VerticalOptions="End"
                           Style="{StaticResource FormHeaderLabelMediumBlue}"  HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" />
                    <Label Margin="0,5,0,5" Grid.Row="4" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate AssignUserRoleLabel}" VerticalOptions="End"
                           Style="{StaticResource FormHeaderLabelMediumBlue}"  HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}"/>
                    <Label Margin="0,5,0,5" Grid.Row="5" Grid.Column="{Binding LabelColumn}" Text="{lEx:Translate EmailAddressLabel}"  VerticalOptions="End"
                           Style="{StaticResource FormHeaderLabelMediumBlue}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" />

                    <Entry Margin="0,5,0,5"  Grid.Row="2" Grid.Column="{Binding DataColumn}" Text="{Binding UserDetails.NIN, Mode=TwoWay}" 
                           Style="{StaticResource BlueTextEntryMedium}"  HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" />
                    <Entry Margin="0,5,0,5"  Grid.Row="3" Grid.Column="{Binding DataColumn}" Text="{Binding UserDetails.UserName, Mode=TwoWay}" 
                           Style="{StaticResource BlueTextEntryMedium}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}"/>
                    <Entry Margin="0,5,0,5"  Grid.Row="4" Grid.Column="{Binding DataColumn}" Text="{Binding UserDetails.AssignedRole, Mode=TwoWay}" 
                           Style="{StaticResource BlueTextEntryMedium}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}"/>
                    <Entry Margin="0,5,0,5"  Grid.Row="5" Grid.Column="{Binding DataColumn}" Text="{Binding UserDetails.EmailAddress, Mode=TwoWay}" 
                           Style="{StaticResource BlueTextEntryMedium}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="{x:Static gb:GlobalSetting.AlignLabelText}" />
                </Grid>
            </StackLayout>

            <Button Text="{lEx:Translate Submit}" Style="{StaticResource GreenButton}" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ScrollView>
    </StackLayout>
</ContentPage>